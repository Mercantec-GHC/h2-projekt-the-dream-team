@page "/manage-guests"
@rendermode InteractiveServer
@inherits BasePage

@inject ApiClient Api

@if (!string.IsNullOrWhiteSpace(response))
{
    <div class="alert alert-success">@response</div>
}

<div class="d-flex gap-3 justify-content-between mb-3">
    <h3 class="mb-0">Gæster</h3>

    <button type="button" class="btn btn-success" @onclick="() => CreateOrEditGuest()" data-bs-toggle="modal" data-bs-target="#createEditModal">Tilføj</button>
</div>

@if (guests is null)
{
    <p>Henter data...</p>
}
else if (guests.Count == 0)
{
    <em>Ingen gæster fundet.</em>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th width="100">Id</th>
                <th width="100">Fornavn</th>
                <th width="100">Efternavn</th>
                <th width="100">Email</th>
                <th width="1"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var guest in guests)
            {
                <tr>
                    <td class="align-middle">@guest.Id</td>
                    <td class="align-middle">@guest.FirstName</td>
                    <td class="align-middle">@guest.LastName</td>
                    <td class="align-middle">@guest.Email</td>
                    <td class="align-middle">
                        <div class="d-flex gap-2 w-100 justify-content-end">
                            <button type="button" class="btn btn-secondary" @onclick="() => CreateOrEditGuest(guest)" data-bs-toggle="modal" data-bs-target="#createEditModal">Rediger</button>

                            <button class="btn btn-danger" @onclick="() => guestToDelete = guest" data-bs-toggle="modal" data-bs-target="#deleteModal">Slet</button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="modal fade" id="createEditModal" tabindex="-1" aria-labelledby="createEditModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content p-3">
            <div class="d-flex align-items-center justify-content-between">
                <h5 class="fs-4 mb-0" id="createEditModalLabel">@(guestToEdit?.Id > 0 ? "Rediger" : "Tilføj") Gæst</h5>

                <button type="button" class="d-flex justify-content-center align-items-center rounded-2 text-black fs-7 min-w-2rem min-h-2rem w-2rem h-2rem border-0" data-bs-dismiss="modal" aria-label="Close">
                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" role="img" width="16" height="16" viewBox="0 0 24 24">
                        <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 6L6 18M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <div class="modal-body my-3 p-0">
                @if (!string.IsNullOrWhiteSpace(modalResponse))
                {
                    <div class="alert alert-success">@modalResponse</div>
                }

                @if (guestToEdit is not null)
                {
                    <GuestForm Model="guestToEdit" HideButton="true" />
                }
            </div>

            <div class="d-flex gap-3">
                <button type="button" class="btn btn-primary w-50" data-bs-dismiss="modal" @onclick="CreateOrSaveGuest">Gem</button>
                <button type="button" class="btn btn-secondary w-50" data-bs-dismiss="modal">Annullér</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content p-3">
            <div class="d-flex align-items-center justify-content-between">
                <h5 class="fs-4 mb-0" id="deleteModalLabel">Slet Gæst</h5>

                <button type="button" class="d-flex justify-content-center align-items-center rounded-2 text-black fs-7 min-w-2rem min-h-2rem w-2rem h-2rem border-0" data-bs-dismiss="modal" aria-label="Close">
                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" role="img" width="16" height="16" viewBox="0 0 24 24">
                        <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 6L6 18M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <div class="d-flex gap-3 mt-3">
                <button type="button" class="btn btn-danger w-50" data-bs-dismiss="modal" @onclick="DeleteGuest">Slet</button>
                <button type="button" class="btn btn-secondary w-50" data-bs-dismiss="modal">Annullér</button>
            </div>
        </div>
    </div>
</div>

@code {
    private string? response;
    private string? modalResponse;

    private GuestDto? guestToEdit;
    private GuestDto? guestToDelete;

    private ICollection<GuestDto> guests;

    protected override async Task OnInitializedAsync()
    {
        guests = await Api.GetAllGuestsAsync();
    }

    public void CreateOrEditGuest(GuestDto? guest = null)
    {
        modalResponse = null;

        if (guest is not null)
        {
            guestToEdit = guest;
        }
        else
        {
            guestToEdit = new GuestDto();
        }
    }

    public async Task CreateOrSaveGuest()
    {
        modalResponse = null;

        if (guestToEdit is null)
        {
            return;
        }

        try
        {
            if (guestToEdit.Id == 0)
            {
                var guestId = await Api.CreateGuestAsync(new CreateGuestCommand()
                {
                    FirstName = guestToEdit.FirstName,
                    LastName = guestToEdit.LastName,
                    Email = guestToEdit.Email,
                });

                guests.Add(new GuestDto()
                {
                    Id = guestId,
                    FirstName = guestToEdit.FirstName,
                    LastName = guestToEdit.LastName,
                    Email = guestToEdit.Email,
                });

                modalResponse = $"Gæst \"{guestToEdit.FirstName}\" oprettet.";
            }
            else
            {
                await Api.UpdateGuestAsync(new UpdateGuestCommand()
                {
                    Id = guestToEdit.Id,
                    FirstName = guestToEdit.FirstName,
                    LastName = guestToEdit.LastName,
                    Email = guestToEdit.Email,
                });

                var guest = guests.FirstOrDefault(r => r.Id == guestToEdit.Id);

                if (guest is not null)
                {
                    guest.FirstName = guestToEdit.FirstName;
                    guest.LastName = guestToEdit.LastName;
                    guest.Email = guestToEdit.Email;
                }
            }

            guestToEdit = null;

            StateHasChanged();
        }
        catch (ApiException ex)
        {
            modalResponse = ex.Response;
        }
    }

    public async Task DeleteGuest()
    {
        if (guestToDelete is null)
        {
            return;
        }

        try
        {
            await Api.DeleteGuestAsync(guestToDelete.Id);

            guests.Remove(guestToDelete);

            response = $"Gæst #{guestToDelete.Id} er slettet.";
        }
        catch (ApiException ex)
        {
            response = ex.Response;
        }
    }
}