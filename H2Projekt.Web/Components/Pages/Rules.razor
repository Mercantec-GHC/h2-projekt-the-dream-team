@page "/rules"
@rendermode InteractiveServer

@inject ApiClient Api

<h3>Regler</h3>

@if (rules is null)
{
    <p>Henter regler...</p>
}
else
{
    @foreach (var rule in rules)
    {
        <div class="my-5">
            <h4>@rule.Title</h4>
            
            <ul>
                @foreach (var item in rule.Rules)
                {
                    <li>@item</li>
                }
            </ul>
        </div>
    }
}

@code {
    private ICollection<Rule>? rules;

    protected override async Task OnInitializedAsync()
    {
        rules = await Api.GetRulesAsync();
    }
}